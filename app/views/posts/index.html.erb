<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= @user.name %>
			<%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
		</div>

		<div class = "col-xs-9">
			<table>
				<% @posts.each do |post| %>
					<%= post.content %>
				<% end %>
			</table>
		</div>
	</div>
</div>